<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnbeckner.buzzshelter.ShelterInfoActivity">

    <TextView
        android:id="@+id/shelterName"
        android:layout_width="356dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/shelterRes"
        android:text="Shelter Name: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shelterPhone"
        android:layout_width="356dp"
        android:layout_height="75dp"
        android:layout_below="@+id/shelterName"
        android:layout_centerHorizontal="true"
        android:text="Shelter Phone: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shelterCap"
        android:layout_width="356dp"
        android:layout_height="84dp"
        android:layout_alignStart="@+id/shelterRes"
        android:layout_below="@+id/shelterPhone"
        android:text="Shelter Capacity: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shelterRes"
        android:layout_width="356dp"
        android:layout_height="96dp"
        android:layout_alignStart="@+id/shelterPhone"
        android:layout_below="@+id/shelterCap"
        android:text="Shelter Restrictions: "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shelterAddress"
        android:layout_width="356dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/shelterPhone"
        android:layout_below="@+id/shelterRes"
        android:text="Shelter Address"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reserveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shelterAddress"
        android:layout_centerHorizontal="true"
        android:text="Reserve a Spot!"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="479dp" />
</RelativeLayout>
